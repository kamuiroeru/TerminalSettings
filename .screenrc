# スタート画面表示させない
startup_message off

# vim の終了後がおかしくならないように
altscreen on

# 色設定
defbce on
term xterm-256color

shelltitle "$ |zsh"
hardstatus alwayslastline "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %Y %m/%d %C%a "
hardstatus off

escape ^Tt

termcap * 'G0:S0=\E(%.:E0=\E(B:TY=iso2022'
autodetach on
defflow off
crlf off
vbell off
vbell_msg "Bell"

defutf8 on
defkanji utf-8
encoding utf-8 utf-8
defencoding utf-8

bind o focus
bind k kill
bind s split

screen 1
screen 0

defmousetrack on
